<?xml version="1.0" encoding="UTF-8"?>
<!-- Traffic flows for simple intersection -->
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    <!-- Vehicle type definition -->
    <vType id="car" accel="2.6" decel="4.5" sigma="0.5" length="5" maxSpeed="50" guiShape="passenger"/>

    <!-- Routes: from each direction to each other direction -->
    <!-- North to South (straight) -->
    <route id="N2S" edges="N2C C2S"/>
    <!-- North to East (right turn) -->
    <route id="N2E" edges="N2C C2E"/>
    <!-- North to West (left turn) -->
    <route id="N2W" edges="N2C C2W"/>

    <!-- South to North (straight) -->
    <route id="S2N" edges="S2C C2N"/>
    <!-- South to West (right turn) -->
    <route id="S2W" edges="S2C C2W"/>
    <!-- South to East (left turn) -->
    <route id="S2E" edges="S2C C2E"/>

    <!-- East to West (straight) -->
    <route id="E2W" edges="E2C C2W"/>
    <!-- East to North (right turn) -->
    <route id="E2N" edges="E2C C2N"/>
    <!-- East to South (left turn) -->
    <route id="E2S" edges="E2C C2S"/>

    <!-- West to East (straight) -->
    <route id="W2E" edges="W2C C2E"/>
    <!-- West to South (right turn) -->
    <route id="W2S" edges="W2C C2S"/>
    <!-- West to North (left turn) -->
    <route id="W2N" edges="W2C C2N"/>

    <!-- Traffic flows: vehicles per hour, departure time range -->
    <!-- From North: 400 veh/h total -->
    <flow id="flow_N2S" type="car" route="N2S" begin="0" end="3600" vehsPerHour="200"/>
    <flow id="flow_N2E" type="car" route="N2E" begin="0" end="3600" vehsPerHour="100"/>
    <flow id="flow_N2W" type="car" route="N2W" begin="0" end="3600" vehsPerHour="100"/>

    <!-- From South: 400 veh/h total -->
    <flow id="flow_S2N" type="car" route="S2N" begin="0" end="3600" vehsPerHour="200"/>
    <flow id="flow_S2W" type="car" route="S2W" begin="0" end="3600" vehsPerHour="100"/>
    <flow id="flow_S2E" type="car" route="S2E" begin="0" end="3600" vehsPerHour="100"/>

    <!-- From East: 300 veh/h total -->
    <flow id="flow_E2W" type="car" route="E2W" begin="0" end="3600" vehsPerHour="150"/>
    <flow id="flow_E2N" type="car" route="E2N" begin="0" end="3600" vehsPerHour="75"/>
    <flow id="flow_E2S" type="car" route="E2S" begin="0" end="3600" vehsPerHour="75"/>

    <!-- From West: 300 veh/h total -->
    <flow id="flow_W2E" type="car" route="W2E" begin="0" end="3600" vehsPerHour="150"/>
    <flow id="flow_W2S" type="car" route="W2S" begin="0" end="3600" vehsPerHour="75"/>
    <flow id="flow_W2N" type="car" route="W2N" begin="0" end="3600" vehsPerHour="75"/>
</routes>
